<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d_5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/d_3"
    app:cardElevation="@dimen/d_3"
    app:contentPadding="@dimen/d_0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginLeft="@dimen/d_5"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_60"
                android:scaleType="centerCrop"
                android:src="@mipmap/logo"
                />

            <LinearLayout
                android:layout_width="@dimen/d_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_10"
                android:layout_marginRight="@dimen/d_5"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="贵州五月科技有限公司"
                    android:textSize="@dimen/txt_18"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="金阳高新区会展东路大唐36层312楼"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-7-27 16:52:37"
                    />

            </LinearLayout>


        </LinearLayout>
        <include  layout="@layout/partial_like_comment_forward"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
