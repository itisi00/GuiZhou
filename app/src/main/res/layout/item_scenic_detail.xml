<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d_5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/d_8"
    app:cardElevation="@dimen/d_3"
    app:contentPadding="@dimen/d_0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d_5"
        >

        <include layout="@layout/item_user_header_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:layout_marginTop="@dimen/d_5"
            android:background="@color/colorGray"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_13"
            android:layout_marginTop="@dimen/d_13"
            android:lineSpacingMultiplier="1.2"
            android:text="一大段内容,或者一小段内容,可能要用展开的方式或者干脆一次性展示完全可能要用展开的方式或者干脆一次性展示完全,因为大部分人不会输入过多的内容"
            android:textSize="@dimen/txt_14"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/d_0"
                android:layout_height="@dimen/d_66"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/splash_back4"
                />

            <ImageView
                android:layout_width="@dimen/d_0"
                android:layout_height="@dimen/d_66"
                android:layout_marginLeft="@dimen/d_5"
                android:layout_marginRight="@dimen/d_5"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/splash_back4"
                android:visibility="visible"

                />

            <ImageView
                android:layout_width="@dimen/d_0"
                android:layout_height="@dimen/d_66"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/splash_back4"
                android:visibility="invisible"


                />
        </LinearLayout>

        <include layout="@layout/item_like_comment_forward" />

        <include layout="@layout/item_like"/>
        <!--性能更好-->
        <!--<ViewStub-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout="@layout/item_like"-->
        <!--android:visibility="visible"-->
        <!--/>-->
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--&gt;-->

        <!--</LinearLayout>-->

        <!--评论要做列表了-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_10"
            android:layout_marginLeft="@dimen/d_5"
            android:layout_marginRight="@dimen/d_5"
            android:layout_marginTop="@dimen/d_5"
            android:background="@drawable/tv_comment_border"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/d_10"
            android:text="评论"
            android:textColor="@color/colorGray"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
