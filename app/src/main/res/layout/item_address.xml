<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d_5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/d_3"
    app:cardElevation="@dimen/d_3"
    app:contentPadding="@dimen/d_0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10"
        android:orientation="vertical"
        android:padding="@dimen/d_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <View
                android:id="@+id/view_circle_gray"
                android:layout_width="@dimen/d_10"
                android:layout_height="@dimen/d_10"
                android:layout_marginRight="@dimen/d_10"
                android:background="@drawable/bg_circle_gray"
                />

            <View
                android:id="@+id/view_circle_primary"
                android:layout_width="@dimen/d_10"
                android:layout_height="@dimen/d_10"
                android:layout_marginRight="@dimen/d_10"
                android:background="@drawable/bg_circle_primary"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="@dimen/d_180"
                android:text="诸葛武侯"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/txt_14"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="@dimen/d_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="18285174924"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/txt_14"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="贵州省贵阳市花果园一期十三栋6单元2227"
            android:textColor="@color/colorImportent"
            android:textSize="@dimen/txt_15"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>