<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d_5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/d_3"
    app:cardElevation="@dimen/d_3"
    app:contentPadding="@dimen/d_0"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d_5"
        >


        <ImageView
            android:id="@+id/iv_cover"
            style="@style/BorderLess"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_150"
            android:scaleType="centerCrop"
            android:src="@mipmap/test_userheader"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_5"
            android:layout_marginTop="@dimen/d_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="说说和日志相册"
            android:textColor="@color/colorImportent"
            android:textSize="@dimen/txt_15"
            />

        <TextView
            android:id="@+id/tv_extend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="7890张 仅自己可见"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/txt_13"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>