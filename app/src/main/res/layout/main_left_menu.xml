<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_back4"
    android:orientation="vertical"
    >
    <!--左侧菜单 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/d_15"
        >

        <ImageView
            android:id="@+id/iv_left_header"
            android:layout_width="@dimen/d_60"
            android:layout_height="@dimen/d_60"
            android:layout_marginLeft="@dimen/d_10"
            android:src="@mipmap/menu_left_header"
            android:layout_centerVertical="true"
            />


        <com.hanks.htextview.rainbow.RainbowTextView
            android:id="@+id/tv_username"
            android:layout_width="@dimen/d_180"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:layout_toRightOf="@id/iv_left_header"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="itisiitisiitisi"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_30"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            style="@style/BorderLess"
            />


    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/d_10"
            >

            <TextView
                android:id="@+id/menu_left_agenda"
                style="@style/MenuLeft"
                android:text="@string/left_menu_agenda"
                android:drawableLeft="@mipmap/menu_left_calendar"

                />

            <TextView
                android:id="@+id/menu_left_birthday"
                style="@style/MenuLeft"
                android:text="@string/left_menu_birthday"
                android:drawableLeft="@mipmap/menu_left_birthday"
                />
            <TextView
                android:id="@+id/menu_left_account"
                style="@style/MenuLeft"
                android:text="@string/left_menu_account"
                android:drawableLeft="@mipmap/menu_left_account"
                />
            <TextView
                android:id="@+id/menu_left_footprint"
                style="@style/MenuLeft"
                android:text="@string/left_menu_footprint"
                android:drawableLeft="@mipmap/menu_left_zuji"
                />
            <TextView
                android:id="@+id/menu_left_photo"
                style="@style/MenuLeft"
                android:text="@string/left_menu_album"
                android:drawableLeft="@mipmap/menu_left_photo"
                />
            <TextView
                android:id="@+id/menu_left_collection"
                style="@style/MenuLeft"
                android:text="@string/left_menu_collection"
                android:drawableLeft="@mipmap/menu_left_collection"
                />

            <TextView
                android:id="@+id/menu_left_setting"
                style="@style/MenuLeft"
                android:text="@string/left_menu_setting"
                android:drawableLeft="@mipmap/menu_left_setting"
                />
            <TextView
                android:id="@+id/menu_left_about"
                style="@style/MenuLeft"
                android:text="@string/left_menu_about"
                android:drawableLeft="@mipmap/menu_left_about"
                />
            <TextView
                android:id="@+id/menu_left_fadeback"
                style="@style/MenuLeft"
                android:text="@string/left_menu_feedback"
                android:drawableLeft="@mipmap/menu_left_fadeback"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>