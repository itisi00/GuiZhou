<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/d_8"
    app:cardElevation="@dimen/d_3"
    app:contentPadding="@dimen/d_8"
    android:layout_margin="@dimen/d_5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/d_90"
            android:layout_height="@dimen/d_90"
            >
            <ImageView
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_80"
                android:scaleType="centerCrop"
                android:src="@mipmap/test_icon_shiwuzhaoling"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:padding="@dimen/d_2"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_13"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/d_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/d_16"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名称:   黑色钱包,卡片若干,现金若干"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地点:   南明区花果园中央商务区7栋附近"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间:   2017-7-21 18:25:54"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系:   周先生 18285174924"
                android:maxLines="1"
                android:ellipsize="end"
                android:autoLink="phone"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
