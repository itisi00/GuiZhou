<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_all"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center"
    android:theme="@style/ToolbarTheme"
    app:contentInsetStart="@dimen/d_0"
    app:layout_collapseMode="pin"
    >
    <!--
        android:background="?attr/colorPrimary"
        android:background="@drawable/bg_toolbar"
        需要用代码控制
    app:navigationIcon="@mipmap/menu_back"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d_10"
        android:paddingRight="@dimen/d_10"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d_50"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/menu_back"
            android:visibility="invisible"
            style="@style/BorderLess"
            />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="@dimen/d_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d_5"
            android:layout_marginRight="@dimen/d_5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_18"
            tools:text="@string/app_name"
            style="@style/BorderLess"
             android:clickable="true"
            android:focusableInTouchMode="true"

            />
        <!--android:background="?android:attr/selectableItemBackgroundBorderless"-->

        <TextView
            android:id="@+id/toolbar_more"
            android:layout_width="@dimen/d_50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/txt_13"
            android:visibility="invisible"
            tools:text="更多"
            style="@style/BorderLess"
            android:clickable="true"
            android:focusableInTouchMode="true"

            />

        <!--android:background="?android:attr/selectableItemBackgroundBorderless"-->
        <!--<android.support.v7.widget.SearchView-->
        <!--android:id="@+id/toolbar_search"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:imeOptions="actionSearch"-->
        <!--app:searchHintIcon="@mipmap/menu_search"-->
        <!--app:closeIcon="@mipmap/menu_close2"-->
        <!--app:defaultQueryHint="搜索"-->
        <!--/>-->

    </LinearLayout>
</android.support.v7.widget.Toolbar>